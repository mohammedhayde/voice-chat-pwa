# Agora Configuration (for voice chat)
NEXT_PUBLIC_AGORA_APP_ID=your_agora_app_id_here
NEXT_PUBLIC_AGORA_TOKEN=your_agora_token_here_optional
# Agora Primary Certificate (required for token generation in Netlify Function)
AGORA_PRIMARY_CERTIFICATE=your_agora_primary_certificate_here

# Pusher Configuration (for text chat)
# Client Side (Public)
NEXT_PUBLIC_PUSHER_KEY=your_pusher_key_here
NEXT_PUBLIC_PUSHER_CLUSTER=eu

# Server Side (Private - for Netlify Functions)
PUSHER_APP_ID=your_pusher_app_id_here
PUSHER_SECRET=your_pusher_secret_here

# Authentication API URL
NEXT_PUBLIC_API_URL=https://backend-chatroom-api.fly.dev/api

# JWT Secrets (backend only - not used in this frontend-only setup)
# JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
# JWT_REFRESH_SECRET=your-super-secret-refresh-key-change-this-in-production

# NextAuth Configuration
NEXTAUTH_URL=https://your-domain.com
NEXTAUTH_SECRET=your-nextauth-secret-here

# Google OAuth
# Get credentials from: https://console.cloud.google.com/apis/credentials
# Important: Add this redirect URI in Google Console:
# https://your-domain.com/api/auth/callback/google
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret
